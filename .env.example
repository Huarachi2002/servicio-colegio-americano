# ==================== CONFIGURACIÓN GENERAL ====================
NODE_ENV=production
PORT=8080

# Migraciones (true solo en la primera ejecución)
RUN_MIGRATIONS=true

# ==================== BASE DE DATOS PRINCIPAL (SQL Server) ====================
DB_HOST=127.0.0.1
DB_PORT=1433
DB_USERNAME=
DB_PASSWORD=
DB_DATABASE=
DB_ENCRYPT=
DB_TRUST_SERVER_CERTIFICATE=

# ==================== BASE DE DATOS SAP (SQL Server) ====================
SAP_DB_HOST=127.0.0.1
SAP_DB_PORT=1433
SAP_DB_USERNAME=
SAP_DB_PASSWORD=
SAP_DB_DATABASE=
SAP_DB_ENCRYPT=
SAP_DB_TRUST_SERVER_CERTIFICATE=

# ==================== AUTENTICACIÓN JWT ====================
JWT_SECRET=cambiar-por-un-string-seguro-aleatorio
JWT_EXPIRATION=7d

# ==================== VERSIONES APP ====================
APK_VERSION=1.0.0
IPA_VERSION=1.0.0

# ==================== SAP SERVICE LAYER ====================
SAP_SERVICE_LAYER_URL=
SAP_COMPANY_DB=
SAP_SL_USER=
SAP_SL_PASSWORD=

# ==================== BNB SERVICE ====================
BNB_API_URL=
BNB_ACCOUNT_ID=
BNB_AUTH_ID=

# ==================== CUENTAS CONTABLES ====================
CUENTA_CONTABLE_BNB=
CUENTA_CONTABLE_BG=
CUENTA_CONTABLE_LUKA_QR=
CUENTA_CONTABLE_LUKA_TARJETA=

# ==================== CONFIGURACIÓN DE LOGS ====================
# Ruta donde se guardarán los archivos de log (absoluta o relativa)
LOG_PATH=./logs

# Nivel de log: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Tamaño máximo de cada archivo de log antes de rotar
LOG_MAX_SIZE=20m

# Cantidad de días a mantener los logs (ej: 30d) o cantidad de archivos (ej: 14)
LOG_MAX_FILES=30d
